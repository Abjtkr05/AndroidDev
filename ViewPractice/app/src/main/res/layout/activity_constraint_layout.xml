<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cgradient"
    tools:context=".ConstraintLayout">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="199dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/lovebirds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <android.support.v7.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="300dp"
      android:layout_height="300dp"
      app:cardCornerRadius="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.13">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:src="@drawable/untitled_1"
        android:translationX="25dp"
        android:translationY="25dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:src="@drawable/untitled"
        android:translationX="25dp"
        android:translationY="84dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:src="@drawable/untitled_11"
        android:translationX="25dp"
        android:translationY="143dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:src="@drawable/untitled_111"
        android:translationX="25dp"
        android:translationY="202dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:textSize="18sp"
        android:translationX="75dp"
        android:translationY="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:textSize="18sp"
        android:translationX="75dp"
        android:translationY="90dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textSize="18sp"
        android:translationX="75dp"
        android:translationY="150dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Enter Gender"
        android:textSize="18sp"
        android:translationX="75dp"
        android:translationY="210dp" />

  </android.support.v7.widget.CardView>

  <Button
      android:id="@+id/button2"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:background="@drawable/cgradient"
      android:text="Button"
      app:layout_constraintBottom_toBottomOf="@+id/cardView"
      app:layout_constraintCircleRadius="20dp"
      app:layout_constraintEnd_toEndOf="@+id/cardView"
      app:layout_constraintHorizontal_bias="0.495"
      app:layout_constraintStart_toStartOf="@+id/cardView"
      app:layout_constraintTop_toBottomOf="@+id/cardView" />

</android.support.constraint.ConstraintLayout>